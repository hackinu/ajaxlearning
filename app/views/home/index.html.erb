<center><h1>Ajax 아작내기 1</h1>
<p>ajax 기초편</p>
<form action="/home/create" method="POST" data-remote="true">
    <input id="comment_body" type="text" name="body">
    <input type="submit">
</form>
<div id="body">
    <% @comments.each do |c| %>
    <div>
        <%= c.body%> : <a href="/home/delete/<%= c.id %>" data-remote="true">삭제</a>
        <hr>
    </div>
    <% end %>

</div>

</form>
</center>
